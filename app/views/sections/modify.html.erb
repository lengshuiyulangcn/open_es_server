<div class="container">
  <div class="row">
      <%= simple_form_for(@modification, html: { class: 'form-horizontal' }) do |f| %>
        <div class="col-md-12">
          <%= f.cktext_area :content,label: "内容",  as: :text  %>
        </div>
        <%= f.input :section_id, input_html: {value: @section.id},  as: :hidden %>
        <div class="col-md-12">
          <%= f.button :submit, "提交", class: "btn btn-info" %>
        </div>
      <% end %>
  </div>
</div>
