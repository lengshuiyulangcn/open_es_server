<header class='header'>
  <div class="row">
    <div class="col-md-3 brand">
      <%=image_tag image_url('favicon.png')%>
      <span class="brand-title">大家的ES</span>
    </div>
    <div class="col-md-3 pull-right list-image-small">
      <% if current_user %>
        <div class="pull-right">
        <%=image_tag current_user.avatar_url %>
	<span>
	 (发表：<%=current_user.created_sections.count%>篇, 修改: <%=current_user.modified_sections.count %>篇)
	</span>
      </div> 
      <% end %>
    </div>
  </div>
</header>
