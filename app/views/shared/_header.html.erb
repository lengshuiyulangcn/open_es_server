<header class='header'>
  <div class="container">
    <div class="row">
      <div class="col-md-3 brand">
        <a class="brand-title" href='/'>大家的ES</a>
        <span class="subtitle">撰写，批改，过关 </span>
      </div>
      <div class="col-md-3 pull-right list-image-small">
        <% if current_user %>
          <div class="pull-right">
          <%=image_tag current_user.avatar_url %>
          <span>
           (发表：<%=current_user.created_sections.count%>篇, 修改: <%=current_user.modified_sections.count %>篇)
          </span>
        </div> 
        <% end %>
      </div>
    </div>
  </div>
</header>
